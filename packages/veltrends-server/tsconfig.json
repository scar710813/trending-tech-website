{
  "compilerOptions": {
    "target": "es2020",                              
    "module": "ES2020",
    "lib": ["ES2020"],           
    "rootDir": "./src",                                 
    "moduleResolution": "node",           
    "outDir": "./dist",                                  
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                    
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true                          
  }
}
